#include <bits/stdc++.h>

using namespace std;

bool cmp(pair<int, int> a, pair<int, int> b){
	return a.second < b.second;
}

int main(){
	int tc; cin >> tc;
	while(tc--){
		int n; cin >> n;
		pair<int, int> a[n];
		for(int i=0; i<n; i++){
			cin >> a[i].first;
		}
		for(int i=0; i<n; i++){
			cin >> a[i].second;
		}
		sort(a, a + n, cmp);
		int end = a[0].second, cnt = 1;
		for(int i=1; i<n; i++){
			if(a[i].first >= end){
				cnt++;
				end = a[i].second;
			}
		}
		cout << cnt << endl;
	}
	return 0;
}
