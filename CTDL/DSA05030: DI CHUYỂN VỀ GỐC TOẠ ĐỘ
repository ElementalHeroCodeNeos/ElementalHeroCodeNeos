#include <bits/stdc++.h>

using namespace std;

using ll = long long;

int main(){
	int tc; cin >> tc;
	while(tc--){
		int n, m; cin >> n >> m;
		ll F[n + 1][m + 1];	// F[i][j]: Sô cách di chuyên tu ô (n, m) dên ô (i, j)
		memset(F, 0, sizeof(F));
		for(int i=0; i<=n; i++){ // VD: n = 3, m = 2. Bài toán con nho nhât F[i][2] = 1 và F[3][j] = 1
			F[i][m] = 1;		//			(0, 0) (0, 1) (0, 2)
		}						//			(1, 0) (1, 1) (1, 2)
		for(int j=0; j<=m; j++){//			(2, 0) (2, 1) (2, 2)
			F[n][j] = 1;		//			(3, 0) (3, 1) (3, 2))
		}
		for(int i=n-1; i>=0; i--){
			for(int j=m-1; j>=0; j--){
				F[i][j] = F[i + 1][j] + F[i][j + 1];
			}
		}
		cout << F[0][0] << endl;
	}
	return 0;
}
