import java.util.Arrays;
import java.util.Comparator;
import java.util.Scanner;
/* Ý tưởng: Lưu các cặp giá trị thời điểm đến và thời gian check-in của n vị khách vào 1 mảng 2 chiều có n hàng và 2 cột. Sau đó
sắp xếp các vị khách theo thời điểm đến tăng dần. */
public class Neos { 
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        Integer[][] a = new Integer[n][2];
        for(int i=0; i<n; i++){
            for(int j=0; j<2; j++){
                a[i][j] = sc.nextInt();
            }
        }
        Arrays.sort(a, new Comparator<Integer[]>(){  // Mảng 2 chiều thực chất là mảng của các mảng 1 chiều
            @Override
            public int compare(Integer[] o1, Integer[] o2) {
                return o1[0] - o2[0];
            }       
        });
        int time = a[0][0] + a[0][1];  // time vừa là thời gian kết thúc check-in của ng trước, vừa là thời gian bắt đầu check-in của ng sau
        for(int i=1; i<n; i++){
            time = Math.max(time, a[i][0]);
            time += a[i][1];
        }
        System.out.println(time);
    }
}
