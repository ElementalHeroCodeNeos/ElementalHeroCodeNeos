import java.util.Scanner;
// Chú ý: nếu dùng hàm lcm để mẫu chung thì WA còn chỉ nhân 2 mẫu số thì AC
class PhanSo {
    private long tu, mau;
    public PhanSo(){

    }
    public PhanSo(long tu, long mau){
        this.tu = tu;
        this.mau = mau;
    }
    public static long gcd(long a, long b){
        if(b == 0) return a;
        return gcd(b, a % b);
    }
    public void rutGon(){
        long uc = gcd(this.tu, this.mau);
        this.tu /= uc;
        this.mau /= uc;
    }
    public PhanSo sum(PhanSo p){
        PhanSo tong = new PhanSo();
        tong.tu = this.tu * p.mau + p.tu * this.mau;
        tong.mau = this.mau * p.mau;
        tong.rutGon();
        return tong;
    }
    public String toString(){
        return this.tu + "/" + this.mau;
    }
}

public class ptit {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        PhanSo p = new PhanSo(sc.nextLong(), sc.nextLong());
        PhanSo q = new PhanSo(sc.nextLong(), sc.nextLong());
        System.out.println(p.sum(q));
    }
}
